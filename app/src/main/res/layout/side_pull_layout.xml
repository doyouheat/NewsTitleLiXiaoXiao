<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/mainBackground"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="?attr/mainBackground"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/iv_head"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="80dp"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nick"
            android:layout_toRightOf="@id/iv_head"
            android:text="未登录"
            android:textSize="25sp"
            android:layout_gravity="center"
           android:layout_marginLeft="30dp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:background="?attr/mainBackground"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:id="@+id/collect"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            >
            <ImageView
                android:id="@+id/iv"
                android:layout_width="35dp"
                android:layout_height="35sp"
                android:src="@mipmap/b_film_star_edge"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收藏"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/history"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            >
            <ImageView
                android:id="@+id/iv2"
                android:layout_width="35dp"
                android:layout_height="35sp"
                android:src="@mipmap/detail_time_icon"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="历史"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv2"
                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/night"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="7dp"
            >
            <ImageView
                android:id="@+id/iv3"
                android:layout_width="35dp"
                android:layout_height="35sp"
                android:src="@mipmap/nighticon_profile"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="夜间"
                android:textSize="17sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/iv3"
                />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="?attr/mainBackground"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/message"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="消息通知"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_all_normal"

                android:id="@+id/iv1"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/top_mall"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="头条商城 "
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邀请好友得200元现金奖励"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/tv2"
                android:layout_centerVertical="true"
                android:layout_marginLeft="120dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_all_normal"

                android:id="@+id/iv5"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/JD_supply"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="京东特供"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv3"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新人领188元红包"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/tv3"
                android:layout_centerVertical="true"
                android:layout_marginLeft="165dp"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_all_normal"

                android:id="@+id/iv6"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/tip_off"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="我要爆料"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv4"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_all_normal"

                android:id="@+id/iv7"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/couple_back"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="用户反馈"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv5"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_all_normal"

                android:id="@+id/iv8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/preferences"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="系统设置"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:id="@+id/tv6"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:src="@mipmap/arrow_all_normal"

                android:id="@+id/iv9"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </LinearLayout>



</LinearLayout>

</RelativeLayout>